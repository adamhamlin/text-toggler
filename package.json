{
	"name": "vext",
	"displayName": "vext",
	"icon": "resources/vext-icon.png",
	"publisher": "FourOrFive",
	"description": "A utility for toggling features of text snippets",
	"repository": {
		"type": "git",
		"url": "https://github.com/adamhamlin/vext.git"
	},
	"version": "0.2.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"license": "MIT",
	"categories": [
		"Other"
	],
	"main": "./out/entry-point.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"contributes": {
		"commands": [
			{
				"command": "vext.toggleCommentType",
				"title": "Toggle Comment Type"
			},
			{
				"command": "vext.toggleQuotes",
				"title": "Toggle Quote Characters"
			},
			{
				"command": "vext.toggleCase",
				"title": "Toggle Text Casing"
			},
			{
				"command": "vext.toggleVariableNamingFormat",
				"title": "Toggle Variable Naming Format"
			},
			{
				"command": "vext.toggleJsonToJs",
				"title": "Toggle JSON to Javascript Object"
			}
		],
		"keybindings": [
			{
				"command": "vext.toggleCommentType",
				"key": "ctrl+alt+t",
				"mac": "cmd+alt+t"
			},
			{
				"command": "vext.toggleQuotes",
				"key": "ctrl+alt+'",
				"mac": "cmd+alt+'"
			},
			{
				"command": "vext.toggleCase",
				"key": "ctrl+alt+a",
				"mac": "cmd+alt+a"
			},
			{
				"command": "vext.toggleVariableNamingFormat",
				"key": "ctrl+alt+v",
				"mac": "cmd+alt+v"
			},
			{
				"command": "vext.toggleJsonToJs",
				"key": "ctrl+alt+j",
				"mac": "cmd+alt+j"
			}
		],
		"configuration": {
			"title": "Vext",
			"properties": {
				"vext.autoFormatOnToggleCommentType": {
					"type": "boolean",
					"default": false,
					"description": "When enabled, automatically format the selection when toggling comment type. NOTE: Requires the `Rewrap` extension to be installed."
				},
				"vext.quoteChars": {
					"type": "array",
					"default": [
						"\"",
						"'",
						"`"
					],
					"description": "The quote characters to toggle between."
				},
				"vext.caseExtraWordChars": {
					"type": "array",
					"default": [
						"-",
						"+",
						".",
						"/",
						":",
						"\"",
						"'",
						",",
						"|",
						"@",
						"$",
						"?",
						"=",
						"&",
						"#"
					],
					"description": "Additional characters that will be considered a part of \\w when parsing words to toggle case. For example, if '-' is specified, then 'super-secret' would be considered a single word."
				},
				"vext.variableNamingFormats": {
					"type": "array",
					"default": [
						"camel",
						"pascal",
						"snake",
						"snakeUpper",
						"kebab"
					],
					"description": "Variable naming formats to toggle between. 'kebabUpper' is also available."
				},
				"vext.useDoubleQuotesForJsStrings": {
					"type": "boolean",
					"default": false,
					"description": "When enabled, toggling JSON to a Javascript object will use double quotes (instead of single quotes) for string values and keys that must be quoted."
				}
			}
		}
	},
	"activationEvents": [
		"onCommand:vext.toggleCommentType",
		"onCommand:vext.toggleQuotes",
		"onCommand:vext.toggleCase",
		"onCommand:vext.toggleVariableNamingFormat",
		"onCommand:vext.toggleJsonToJs"
	],
	"dependencies": {
		"@types/lodash": "^4.14.172",
		"@types/node": "^14.x",
		"@types/vscode": "^1.57.0",
		"comment-json": "^4.2.2",
		"json5": "github:adamhamlin/json5#v2.3.0",
		"lodash": "^4.17.21",
		"module-alias": "^2.2.2",
		"multilang-extract-comments": "^0.4.0",
		"typescript": "^4.3.2"
	},
	"devDependencies": {
		"@types/chai": "^4.2.22",
		"@types/chai-as-promised": "^7.1.4",
		"@types/dedent": "^0.7.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"@vscode/test-electron": "^2.1.3",
		"chai": "^4.3.4",
		"chai-as-promised": "^7.1.1",
		"dedent": "^0.7.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"glob-promise": "^4.2.2",
		"mocha": "^9.2.2"
	}
}
