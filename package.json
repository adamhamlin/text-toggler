{
	"name": "text-toggler",
	"displayName": "text-toggler",
	"publisher": "adamhamlin",
	"description": "A utility for toggling features of text snippets",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/entry-point.js",
	"contributes": {
		"commands": [
			{
				"command": "text-toggler.toggleCommentType",
				"title": "Toggle Comment Type"
			}
		],
		"keybindings": [
			{
				"command": "text-toggler.toggleCommentType",
				"key": "ctrl+alt+t",
				"mac": "cmd+alt+t"
			}
		],
		"configuration": {
			"title": "TextToggler",
			"properties": {
				"text-toggler.autoFormatOnToggleCommentType": {
					"type": "boolean",
					"default": false,
					"description": "When enabled, automatically format the selection when toggling comment type. NOTE: Requires the `Rewrap` extension to be installed."
				}
			}
		}
	},
	"activationEvents": [
		"onCommand:text-toggler.toggleCommentType"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"module-alias": "2.2.2"
	},
	"devDependencies": {
		"@types/chai": "^4.2.22",
		"@types/glob": "7.1.3",
		"@types/lodash": "4.14.172",
		"@types/mocha": "8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "1.57.0",
		"@typescript-eslint/eslint-plugin": "4.26.0",
		"@typescript-eslint/parser": "4.26.0",
		"chai": "4.3.4",
		"eslint": "7.27.0",
		"glob": "7.1.7",
		"lodash": "4.17.21",
		"mocha": "8.4.0",
		"multilang-extract-comments": "0.4.0",
		"tsconfig-paths": "3.10.1",
		"typescript": "4.3.2",
		"vscode-test": "1.5.2"
	}
}
