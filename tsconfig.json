{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"lib": [
			"es2019"
		],
		"outDir": "out",
		"rootDir": "src",
		"baseUrl": "src",
		"typeRoots": [
			"src/external-types",
			"./node_modules/@types"
		],
		"sourceMap": true,
		"skipLibCheck": true,
		"strict": true   /* enable all strict type-checking options */
	},
	"exclude": [
		"src/external-types",
		"node_modules",
		".vscode-test",
		"scratch",
		"resources"
	]
}
